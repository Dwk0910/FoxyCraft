{
  "name": "foxycraft",
  "author": "neatore",
  "version": "0.0.1",
  "description": "FoxyCraft helps you create, configure, and run your own Minecraft server with a powerful and user-friendly interface.",
  "main": "main.js",
  "scripts": {
    "start-react": "vite",
    "build-react": "vite build",
    "start-electron": "electron .",
    "build": "npm run build-react && electron-builder --dir",
    "dev": "concurrently --kill-others --raw \"npm run start-react\" \"wait-on http-get://localhost:5173/ && npm run start-electron\""
  },
  "dependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@tailwindcss/vite": "^4.1.11",
    "antd": "^5.26.7",
    "axios": "^1.11.0",
    "electron-log": "^5.4.2",
    "i18next": "^25.3.2",
    "jquery": "^3.7.1",
    "lucide-react": "^0.535.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.1",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.6",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "org.foxycraft",
    "productName": "FoxyCraft",
    "files": [
      "dist/**/*",
      "resources/**/*",
      "main.js",
      "preload.js"
    ],
    "extraFiles": [
      {
        "from": "resources/jre_mac",
        "to": "resources/jre_mac",
        "filter": "**/*"
      },
      {
        "from": "resources/jre_win_64",
        "to": "resources/jre_win_64",
        "filter": "**/*"
      },
      {
        "from": "resources/FoxyCraft.jar",
        "to": "resources/FoxyCraft.jar",
        "filter": "**/*"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "msi",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
